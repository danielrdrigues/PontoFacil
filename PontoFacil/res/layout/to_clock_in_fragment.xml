<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center" >

    <TextView
        android:id="@+id/date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/teal_500"
        android:textSize="@dimen/to_clock_in_text_size_subtitle" />

    <EditText
        android:id="@+id/check_point_one"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/padding_border" />

    <EditText
        android:id="@+id/check_point_two"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/check_point_one"
        android:layout_marginBottom="@dimen/padding_border"
        android:layout_marginTop="@dimen/padding_border" />

    <EditText
        android:id="@+id/check_point_three"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/check_point_two"
        android:layout_marginBottom="@dimen/padding_border"
        android:layout_marginTop="@dimen/padding_border" />

    <EditText
        android:id="@+id/check_point_four"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/check_point_three"
        android:layout_marginTop="@dimen/padding_border" />

</RelativeLayout>