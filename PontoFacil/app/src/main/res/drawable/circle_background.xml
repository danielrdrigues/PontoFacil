<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Shadow -->
    <item>
        <shape android:shape="oval" >
            <gradient
                android:angle="180"
                android:endColor="#8c8c8c"
                android:startColor="#cbcbcb" />
        </shape>
    </item>
    <!-- Linha verde -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval" >
            <solid android:color="@color/teal_500" />
        </shape>
    </item>
    <!-- Gradiente -->
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="oval" >
            <gradient
                android:angle="90"
                android:endColor="@color/teal_50"
                android:startColor="@color/white" />
        </shape>
    </item>
    <!-- Main button - branco -->
    <item
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
        <shape android:shape="oval" >
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>