<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <TextView
            android:id="@+id/label_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Notificações"
            android:textColor="@color/teal_500"
            android:textSize="@dimen/to_clock_in_text_size_subtitle"
            android:paddingBottom="@dimen/padding_border" />

        <ToggleButton
            android:id="@+id/toggle_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_notifications"
            android:layout_centerHorizontal="true"
            android:textOff="Não"
            android:textOn="Sim" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/uiltonsantos/AndroidStudioProjects/PontoFacil/app/src/main/res/layout/config_fragment.xml -->